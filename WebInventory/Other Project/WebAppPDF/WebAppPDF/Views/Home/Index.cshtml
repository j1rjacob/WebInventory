@model IEnumerable<AspNetUser>
@{
    ViewBag.Title = "User PDF";
}

<h4>Users</h4>
<hr/>
<div id="Grid">
    <table cellpadding="5" cellspacing="0" style="border: 1px solid #ccc;font-size: 9pt;">
        <tr>
            <th style="background-color: #B8DBFD;border: 1px solid #ccc">ID</th>
            <th style="background-color: #B8DBFD;border: 1px solid #ccc">Email</th>
            <th style="background-color: #B8DBFD;border: 1px solid #ccc">Password</th>
            <th style="background-color: #B8DBFD;border: 1px solid #ccc">Username</th>
        </tr>
        @foreach (AspNetUser user in Model)
        {
            <tr>
                <td style="width:120px;border: 1px solid #ccc">@user.Id</td>
                <td style="width:120px;border: 1px solid #ccc">@user.Email</td>
                <td style="width:120px;border: 1px solid #ccc">@user.PasswordHash</td>
                <td style="width:120px;border: 1px solid #ccc">@user.UserName</td>
            </tr>
        }
    </table>
</div>
<br/>
<br/>
@using (Html.BeginForm("Export", "Home", FormMethod.Post))
{
    <input type="hidden" name="GridHtml"/>
    <input type="submit" id="btnSubmit" value="Export"/>
}

@*<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            $("input[name='GridHtml']").val($("#Grid").html());
        });
    });
</script>